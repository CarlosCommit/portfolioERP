<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>


<?import javafx.scene.control.skin.TabPaneSkin.TabContentRegion?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.erp.portfolio.controller.ProjectController">
   <children>
      <TableView onMouseReleased="#activeButtons" fx:id="projectsTable" accessibleRole="COMBO_BOX" layoutX="20.0" layoutY="100.0" prefHeight="200.0" prefWidth="349.0">

          <columns>
              <TableColumn prefWidth="90.0" text="Proyecto">
                  <cellValueFactory>
                      <PropertyValueFactory property="title" />
                  </cellValueFactory>
              </TableColumn>
              <TableColumn prefWidth="77.0" text="Descripcion">
                  <cellValueFactory>
                      <PropertyValueFactory property="description" />
                  </cellValueFactory>
              </TableColumn>
              <TableColumn prefWidth="90.0" text="Url">
                  <cellValueFactory>
                      <PropertyValueFactory property="urlRepo" />
                  </cellValueFactory>
              </TableColumn>
          </columns>

         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <Button fx:id="btnDelete" layoutX="383.0" layoutY="240.0" mnemonicParsing="false" text="Eliminar" />
      <Button fx:id="btnUpdate" layoutX="389.0" layoutY="275.0" mnemonicParsing="false" text="Editar" />
      <Button fx:id="btnNew" layoutX="318.0" layoutY="66.0" mnemonicParsing="false" text="Nuevo" />
      <Label layoutX="20.0" layoutY="21.0" prefHeight="45.0" prefWidth="135.0" text="PROYECTOS SUBIDOS" />
   </children>
</AnchorPane>
